<!DOCTYPE html>
<html lang="en">

<%- include('partials/head')%>

<body>
  <%- include('partials/navbar')%>

  <div class="container">
    <div class=row>
      <div class="col-md-6 m-auto">

        <h1 class="text-center display-4 my-4">Find your lost items</h1>

      </div>
    </div>



    <div class="row">
      <div class="col-md-6 col-sm-6 col-xs-12 m-auto">
        <form method="post">
          <div class="form-group">
            <label>Location</label>
            <input class="form-control" id="location" name="location" type="text" placeholder="Location" />
          </div>
          <div class="form-group">
            <label class="control-label" for="date">Date</label>
            <input class="form-control" id="date" name="date" placeholder="MM/DD/YYY" type="text" />
          </div>
          <div class="form-group" style="text-align: center;">
            <button class="btn btn-primary" name="search" type="search">Search</button>
          </div>
        </form>
      </div>
    </div>


    <hr>

    <div class="row">
      <div class="col-md-6 m-auto">
        <h1 class="text-center display-4" style="padding-top: 0;">Listings</h1>
        <% for(let i = uploads.length-1; i >= 0; i--) { %>
        <div class="card  mb-3">
          <% if(files[i]){ %>
          <% if(files[i].isImage){ %>
          <img style="width:100%" class="card-img-top" src="image/<%= files[i].filename %>" alt="lost item">
          <% }else{ %>
          <%= files[i].filename%>
          <% }%>

          <% }else { %>
          <p>No files to show</p>
          <% } %>
          <div class="card-body">

            <h5 class="card-title"><%= uploads[i].item %></h5>

            <p class="card-text">Location: <%= uploads[i].location %></p>
            <p class="card-text">Description: <%= uploads[i].description %></p>
            <p class="card-text">Reward: <%= uploads[i].reward %></p>

            <p class="card-text"><small class="text-muted">Posted on <%= uploads[i].date.toDateString()%> from
                <%= uploads[i].name %></small></p>
            <p class="card-text"><small class="text-muted">Contact information: <%= uploads[i].contact%></small></p>
          </div>
        </div>
        <% } %>

      </div>
    </div>



</body>

</html>